############################################################
#                     BASE DE DONNÉES
############################################################
# URL de connexion DEV (Prisma / ORM)
# Format MariaDB/MySQL :
#   mysql://USER:PASS@HOST:PORT/DBNAME
# En Docker, HOST = nom du service (ex: db)
DATABASE_URL=

# URL de connexion PROD (même format que ci-dessus)
# DATABASE_URL=

############################################################
#             NEXTAUTH (AUTHENTIFICATION) - DEV
############################################################
# URL publique de l'app (utilisée par NextAuth pour les callbacks)
# Exemple DEV : http://localhost:3000
NEXTAUTH_URL=

############################################################
#            NEXTAUTH (AUTHENTIFICATION) - PROD
############################################################
# Décommente et renseigne en PROD
# Exemple PROD : https://bde-ensar.fr
# NEXTAUTH_URL=

# Secret cryptographique (génère avec: openssl rand -base64 32)
# ⚠️ Secret (GitHub Secrets)
NEXTAUTH_SECRET=

############################################################
#                    GOOGLE OAUTH - DEV
############################################################
# Identifiants OAuth Google (console Google Cloud)
# ⚠️ Secrets (GitHub Secrets)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

############################################################
#                    GOOGLE OAUTH - PROD
############################################################
# Décommente si tu veux séparer DEV/PROD
# ⚠️ Secrets (GitHub Secrets)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=


############################################################
#                       STRIPE - DEV
############################################################
# Clé secrète serveur (sk_*)
# ⚠️ Secret (GitHub Secrets)
STRIPE_SECRET_KEY=

# Secret du webhook (serveur)
# ⚠️ Secret (GitHub Secrets)
STRIPE_WEBHOOK_SECRET=

############################################################
#                      STRIPE - PROD
############################################################
# Décommente si tu veux séparer DEV/PROD
# ⚠️ Secrets pour les deux premières
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""

############################################################
#                      STRIPE - PRIX ADHESION
############################################################

# Prix de l’adhésion en centimes (ex: 1500 = 15,00 €)
STRIPE_ADHESION_PRICE_CENTS=


############################################################
#                        EMAIL / SMTP
############################################################
# Hôte SMTP (ex: smtp.example.com)
SMTP_HOST=

# Port SMTP : 587 (STARTTLS) ou 465 (TLS)
SMTP_PORT=

# true si port 465 (TLS direct), false si 587 (STARTTLS)
SMTP_SECURE=false

# Identifiants SMTP
SMTP_USER=
# ⚠️ Secret (GitHub Secrets)
SMTP_PASS=

# Expéditeur par défaut
# Exemple : "BDE ENSAR <no-reply@bde-ensar.fr>"
SMTP_FROM=


############################################################
#                   NEXT PUBLIC (EXPOSÉ CLIENT)
############################################################
# URL publique (DEV) visible côté client
# Exemple : http://localhost:3000
NEXT_PUBLIC_APP_URL=

# URL publique (PROD) visible côté client
# Exemple : https://bde-ensar.fr
# NEXT_PUBLIC_APP_URL=


############################################################
#               INTEGRATIONS EXTERNES / RÉSEAUX
############################################################
# Token Instagram Graph API si utilisé
# ⚠️ Secret (GitHub Secrets)
INSTAGRAM_GRAPH_TOKEN=


############################################################
#                 (OPTIONNEL) INFRA / TRAEFIK
############################################################
# Domaine public de l'app (utilisé par proxy / config)
# Exemple : bde-ensar.fr
DOMAIN=

# Email pour Let's Encrypt (Traefik)
TRAEFIK_ACME_EMAIL=
